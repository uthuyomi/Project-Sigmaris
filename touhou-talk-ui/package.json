{
  "name": "touhou-talk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node tools/dev.mjs",
    "dev:raw": "next dev",
    "build": "next build",
    "start": "next start",
    "desktop:dev": "cross-env TOUHOU_DESKTOP_DEV_URL=http://127.0.0.1:3000 electron tools/desktop/main.cjs",
    "desktop:prepare": "next build && node tools/desktop/prepare-next.cjs",
    "desktop:dist": "npm run desktop:prepare && electron-builder --win --x64",
    "lint": "eslint"
  },
  "dependencies": {
    "@assistant-ui/react": "^0.12.10",
    "@assistant-ui/react-markdown": "^0.12.3",
    "@radix-ui/react-avatar": "1.1.11",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-separator": "1.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-tooltip": "1.2.8",
    "@react-aria/button": "^3.14.4",
    "@supabase/auth-helpers-nextjs": "0.15.0",
    "@supabase/ssr": "0.8.0",
    "@supabase/supabase-js": "2.89.0",
    "@vercel/analytics": "1.6.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "framer-motion": "^12.34.3",
    "lucide-react": "0.562.0",
    "next": "16.1.4",
    "openai": "6.15.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.3.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "remark-gfm": "^4.0.1",
    "sass": "^1.97.3",
    "shiki": "^3.22.0",
    "tailwind-merge": "3.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "20.11.30",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "autoprefixer": "10.4.23",
    "cross-env": "^7.0.3",
    "electron": "^36.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "9.1.1",
    "eslint-config-next": "16.1.4",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "tw-animate-css": "1.4.0",
    "typescript": "5.3.3"
  },
  "main": "tools/desktop/main.cjs",
  "build": {
    "appId": "dev.sigmaris.touhou-talk",
    "productName": "Touhou Talk",
    "directories": {
      "output": "dist-desktop"
    },
    "files": [
      "tools/desktop/main.cjs"
    ],
    "extraResources": [
      {
        "from": "tools/desktop/.bundle",
        "to": "bundle",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
